<view class="page">
  <view class="page__hd">
    <view class="page__title row">
      <text>芸芸的糖果屋</text>
      <navigator url="./item">
        <button class="weui-btn mini-btn" type="primary" size="mini">添加商品</button>
      </navigator>
    </view>
    <view class="viewage__desc">hehe </view>
  </view>
  <view class="page__bd page__bd_spacing">
    <view class="kind-list">
      <block wx:for="{{lists}}" wx:key="objectId">
        <view class="kind-list__item {{item.status === true ? '' : 'disabled'}}">
          <navigator url="./item?id={{item.objectId}}">
            <view class="kind-list__item-hd">
              <view>
                {{item.title}}
              </view>
              <image style="display: block; width: 100%;height: 180px;" lazy-load mode="aspectFill" wx:for="{{item.pic}}" wx:key="*this" src="{{item}}"></image>
            </view>
          </navigator>
        </view>
      </block>
    </view>
  </view>
</view>